<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ListView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/pokemonGlobalListView"
        android:choiceMode="singleChoice"
        android:listSelector="@android:color/darker_gray"
        android:fadeScrollbars="false"
        />

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/myPokemon"
        android:gravity="center"
        android:layout_alignLeft="@+id/myPokemonListView"
        android:layout_alignTop="@+id/pokemonGlobalListView"
        android:text="My Pokemon"/>

    <ListView
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:id="@+id/myPokemonListView"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@+id/pokemonGlobalListView"
        android:layout_below="@+id/myPokemon"
        android:fadeScrollbars="false"
        android:choiceMode="singleChoice"
        android:listSelector="@android:color/darker_gray"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/addButton"
        android:layout_alignLeft="@+id/myPokemonListView"
        android:layout_below="@+id/myPokemonListView"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:text="Add Pokemon" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/removeButton"
        android:layout_alignRight="@+id/myPokemonListView"
        android:layout_below="@+id/myPokemonListView"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:text="Remove Pokemon"/>

</RelativeLayout>
